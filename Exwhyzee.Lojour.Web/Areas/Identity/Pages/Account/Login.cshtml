@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_AccountLayout.cshtml";

}
<style>
    .register-Lojour input {
        background-color: #fff !important;
        border-color: #110e0e !important;
    }

    .dashboard-main-disc input.form-control {
        height: 45px;
        background-color: #fff !important;
        border-radius: 0px !important;
    }
</style>
<style>
    .form-group {
        width: 100%;
    }

    input[type="text"], input[type="tel"], input[type="password"], input[type="email"], input[type="number"], input[type="date"], textarea, select {
        border: 1px solid #ccc;
        border-radius: 0px;
    }

    .form-control {
        margin: 0 0 16px 0;
        padding: 11px 16px;
        height: 42px;
        border-radius: 0px;
        border: 1px solid #ccc;
    }

    .announcement {
        background-color: rgba(255,229,229,.7);
        border-color: rgba(255,229,229,.7);
        color: #2f3d46;
    }

    .voffset-20 {
        margin-top: 20px !important;
    }

    .panel-body {
        padding: 15px;
    }

    .text-center {
        text-align: center;
    }

    .form-group {
        margin-bottom: 0px;
    }

    .row {
        margin-bottom: 0px;
    }

    a.btn, .btn, button, #reply-title small a, .comment-reply-link, .grid figcaption a, input[type="submit"], input[type="reset"], input[type="button"], input[type="btn"], .featured-listings .owl-prev, .featured-listings .owl-next {
        display: inline-block;
        position: relative;
        border-radius: 0px;
        border: none;
        -webkit-appearance: none;
        -webkit-transition: all 0.2s linear;
        moz-transition: all 0.2s linear;
        -o-transition: all 0.2s linear;
        -ms-transition: all 0.2s linear;
        transition: all 0.2s linear;
        font-size: .75em;
        line-height: 42px;
        height: 42px;
        padding: 0 2em;
        text-align: center;
        text-transform: uppercase;
        color: #fff;
        background: #29333d;
        text-shadow: none !important;
        font-weight: normal !important;
    }

    .btn-default:hover {
        color: #ccc;
        background-color: #ff0000;
        border-color: #ff0000;
    }
</style>

<section class="dashboard" style="background-color:#ffffff;">
    <div class="container">
    <div class="row">
        <div class="col-md-4 hidden-sm hidden-md" style="padding:100px 30px;">
            <div class="panel-body text-center announcement voffset-20" style="background-color:#29333d !important;color:#fff;">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active text-center">
                           

                            <blockquote style="color:#a2a9bf;font-weight:700;">
                                “Do you Know That Landlords grow rich in their sleep without working.”
                            </blockquote> Peter Onwuka, IT Specialist and Developer
                        </div>

                        <div class="item">
                            <blockquote style="color:#a2a9bf;font-weight:700;">
                                “Owning a home is a keystone of wealth… both financial affluence and emotional security ”.
                            </blockquote>Suze Orman
                        </div>

                        <div class="item">
                            <blockquote style="color:#a2a9bf;font-weight:700;">
                                “Now, one thing I tell everyone is learn about real estate. Repeat after me:
                                real estate provides the highest returns, the greatest values and the least risk. ”

                            </blockquote>
                            Armstrong Williams
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-main-disc">
                <h3>Login</h3>
                <div class="login-box-inner">
                    <form method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="">
                                <input asp-for="Input.RememberMe" style="border:1px solid #110e0e;color:#110e0e;" /> Remember Me?

                                @*<label asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>*@
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-default col-xs-12" style="border-radius:0px !important;">Login</button>
                            </div>
                        </div>
                        <p>Don't have an account? <a asp-page="/Account/Register" asp-area="Identity">Create one</a></p>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4" style="padding:100px 30px;">
            <div class="panel-body text-center announcement voffset-20" style="background-color:#29333d !important;color:#fff;">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active text-center">
                            <blockquote style="color:#a2a9bf;font-weight:700;">
                                “If you don’t own a home, buy one. If you own a home, buy another one. If you own two homes, buy a third. And, lend your relatives the money to buy a home.”
                            </blockquote>

                            John Paulson, investor and multi-billionaire
                        </div>

                      

                        <div class="item">
                            <blockquote style="color:#a2a9bf;font-weight:700;">
                                “Buying real estate is not only the best way, the quickest way, the safest way, but the only way to become wealthy.”
                            </blockquote>

                            Marshall Field
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
        </div>
</section>
<div class="clearfix"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
