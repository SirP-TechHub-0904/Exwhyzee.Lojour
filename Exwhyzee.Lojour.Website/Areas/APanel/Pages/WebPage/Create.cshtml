@page
@model Exwhyzee.Lojour.Website.Areas.APanel.Pages.WebPage.CreateModel
@{
    ViewData["Title"] = "New Page";
    Layout = "/Views/Shared/_ClientLayout.cshtml";

}


<link href="/css/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
@using Exwhyzee.Lojour.Website.Extensions.Enums

<!-- page content -->
<style>
</style>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Page <small></small></h2>

                <ul class="nav navbar-right panel_toolbox"></ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">


                <form class="form-horizontal form-label-left" enctype="multipart/form-data" method="post">

                    <span class="section">Add Property</span>

                    <div class="row">
                        <!--Raffle Properties-->
                        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                    Title
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="name" class="form-control col-md-7 col-xs-12" asp-for="Data.Title" name="Data.Title" placeholder="" autofocus type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">
                                    Page Status
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownListFor(model => model.Data.PageStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.Enums.PageStatus))), new { @class = "form-control col-md-7 col-xs-12" })
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">
                                    Page Position
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownListFor(model => model.Data.PagePosition, new SelectList(Enum.GetValues(typeof(Exwhyzee.Enums.PagePosition))), new { @class = "form-control col-md-7 col-xs-12" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">
                                    Content
                                </label>                                <div class="">
                                    <textarea class="textarea" placeholder="Place some text here" name="Data.Content" id="mytextarea"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <button type="button" class="btn btn-primary" asp-route="/RaffleManagement/Index">Cancel</button>
                            <button id="submit" type="submit" class="btn btn-success">Next</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
@section scripts{



<script src="//cdnjs.cloudflare.com/ajax/libs/tinymce/4.5.1/tinymce.min.js"></script>
    <script>
        //tinymce.init({
        //    selector: '#mytextarea'
        //});
        tinymce.init({ selector: 'textarea' });
    </script>
}
