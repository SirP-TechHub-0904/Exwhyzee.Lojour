@page
@model Exwhyzee.Lojour.Website.Areas.APanel.Pages.WebPage.IndexModel
@{
    ViewData["Title"] = "Page Management";

    Layout = "/Views/Shared/_ClientLayout.cshtml";
}

<!-- page content -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel table-responsive">
            <div class="x_title">
                <h2>Page Management </h2>

              
                    <a class="btn btn-sm btn-warning" asp-page="/WebPage/Create"> Add a Page</a>

               
                <div class="clearfix"></div>
            </div>
            <div class="x_content table-responsive">


                <table class="table dataTable table-striped jambo_table bulk_action" border="1" id="table">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">S/N </th>
                         
                            <th class="column-title">Title </th>
                            <th class="column-title">Status</th>
                            <th class="column-title">Position </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model.PagesItem.Source)
                        {
                        <tr class="even pointer">
                           
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>@item.Title</td>
                            <td>@item.PageStatus </td>
                            <td>@item.PagePosition</td>

                            <td>

                                <div class="dropdown">
                                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                        Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" style="max-width:none !important;">

                                        <li>
                                            <a asp-page="./Details" style="padding:3px 5px !important;" asp-route-id="@item.Id">Details</a>
                                        </li>
                                        <li>
                                            <a asp-page="./Edit" style="padding:3px 5px !important;" asp-route-id="@item.Id">Edit</a>
                                        </li>
                                       
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
@section scripts{
    <script type="text/javascript">
        $("table").DataTable();
    </script>
}
